<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg44">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/user"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:text="aurora32s"
                android:textColor="@color/colorWhite"
                android:textSize="15dp"
                android:textStyle="italic"
                android:background="@drawable/drawable_email"
                android:layout_width="wrap_content"
                android:paddingRight="50dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="3dp"
                android:layout_height="wrap_content"
                android:id="@+id/storeNickname" />

            <TextView
                android:text="aurora32s@naver.com"
                android:textColor="@color/colorWhite"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="@drawable/drawable_email"
                android:layout_width="wrap_content"
                android:paddingRight="50dp"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/storeEmail" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable_email"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:adjustViewBounds="false"
                    android:background="#ffbb1c"
                    android:src="@drawable/seed"
                    android:layout_margin="3dp"/>

                <TextView
                    android:text="1000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/colorWhite"
                    android:textAlignment="textEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/storeseed"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:adjustViewBounds="false"
                    android:background="#ffe11c"
                    android:src="@drawable/fruit"
                    android:layout_margin="3dp"/>

                <TextView
                    android:text="3000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/colorWhite"
                    android:textAlignment="textEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/storefruit"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/constraintLayout"
        android:layout_marginStart="28dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="36dp">

        <Button
            android:id="@+id/itemStoreButton"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:background="@drawable/itembutton"
            android:text="Item"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/flowerStoreButton"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp"
            android:background="@drawable/flowerbutton"
            android:text="Flower"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:id="@+id/FL"></FrameLayout>
</LinearLayout>