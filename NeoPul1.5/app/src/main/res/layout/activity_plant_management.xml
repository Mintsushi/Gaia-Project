<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/plantflowerImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/plantpotImage"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="362dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="false"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:src="@drawable/user" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/PlantLV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="level"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/PlantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="7"
                android:text="name"
                android:textSize="20dp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/nameChange"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/chagename" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/EXPGET11"
        android:layout_width="70dp"
        android:layout_height="280dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="70dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:id="@+id/btnTouch"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"

            android:background="@drawable/touch"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnScissors" />

        <Button
            android:id="@+id/btnScissors"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"

            android:background="@drawable/scissor"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnTalk" />

        <Button
            android:id="@+id/btnTalk"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"

            android:background="@drawable/talk"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnMusic" />

        <Button
            android:id="@+id/btnMusic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"

            android:background="@drawable/music"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>


    <Button
        android:id="@+id/ONOFF"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_weight="1"
        android:background="@drawable/on"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:id="@+id/ITEM11"
        android:layout_width="120dp"
        android:layout_height="210dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/backg2"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnWater"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/water" />

            <TextView
                android:id="@+id/waterNumText"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEnergy"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/energy" />

            <TextView
                android:id="@+id/energyNumText"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMedicine"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/water" />

            <TextView
                android:id="@+id/medicineNumText"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/buttonEffectImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="166dp"
        android:layout_marginTop="65dp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/background_light"
        android:layout_marginStart="166dp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/hp11"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="60dp"
        app:layout_constraintRight_toRightOf="parent">

        <ProgressBar
            android:id="@+id/HPbar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:progressDrawable="@drawable/hp_progressbar"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/currentHP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="0"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/HPbar"
            app:layout_constraintHorizontal_bias="0.625"
            app:layout_constraintLeft_toLeftOf="@+id/HPbar"
            app:layout_constraintRight_toLeftOf="@+id/maxHP" />

        <TextView
            android:id="@+id/maxHP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:text="/100"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/HPbar"
            app:layout_constraintRight_toRightOf="@+id/HPbar" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="HP"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/maxHP"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintLeft_toLeftOf="@+id/HPbar"
            app:layout_constraintRight_toRightOf="@+id/HPbar"
            app:layout_constraintTop_toTopOf="@+id/HPbar"
            app:layout_constraintVertical_bias="0.78" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/EXP11"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="199dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <ProgressBar
            android:id="@+id/EXPbar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:progressDrawable="@drawable/exp_progressbar"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/currentEXP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="0"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/EXPbar"
            app:layout_constraintHorizontal_bias="0.625"
            app:layout_constraintLeft_toLeftOf="@+id/EXPbar"
            app:layout_constraintRight_toLeftOf="@+id/maxEXP" />

        <TextView
            android:id="@+id/maxEXP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:text="/100"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/EXPbar"
            app:layout_constraintRight_toRightOf="@+id/EXPbar" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="EXP"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/maxEXP"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintLeft_toLeftOf="@+id/EXPbar"
            app:layout_constraintRight_toRightOf="@+id/EXPbar"
            app:layout_constraintTop_toTopOf="@+id/EXPbar"
            app:layout_constraintVertical_bias="0.78" />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/linearLayout2">

        <ImageButton
            android:id="@+id/bagButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/bag" />

        <ImageButton
            android:id="@+id/touchButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/touch_icon" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>