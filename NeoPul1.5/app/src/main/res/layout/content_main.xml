<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test1">


    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_weight="0.71">

        <ImageView
                android:id="@+id/plantImage7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="bottom"
                android:layout_margin="10dp"
 />

            <ImageView
                android:id="@+id/plantImage8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="bottom"
                android:layout_margin="10dp"
 />

            <ImageView
                android:id="@+id/plantImage9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="bottom"
                android:layout_margin="10dp"
 />

        <ImageView
            android:id="@+id/plantImage5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="bottom"
            android:layout_margin="10dp"
/>

        <ImageView
                android:id="@+id/plantImage2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
/>

        <ImageView
                android:id="@+id/plantImage3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
/>

        <ImageView
                android:id="@+id/plantImage6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="bottom"
                android:layout_margin="10dp"
 />

        <ImageView
            android:id="@+id/plantImage1"
            android:layout_width="100dp"
            android:layout_height="99dp"
            android:gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
/>

        <ImageView
                android:id="@+id/plantImage4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="bottom"
                android:layout_margin="10dp"
 />

    </GridLayout>

    <Button
            android:text="Store"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/storeButton"
            android:layout_gravity="right"
            android:background="@drawable/testbtn1"/>

</LinearLayout>