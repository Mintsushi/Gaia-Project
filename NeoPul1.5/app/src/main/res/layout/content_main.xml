<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgi2"
    android:hapticFeedbackEnabled="false"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:adjustViewBounds="false"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:src="@drawable/user" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userNickNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="userName"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/seed" />

                <TextView
                    android:id="@+id/userseedNumText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="4"
                    android:text="seed"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/fruit" />

                <TextView
                    android:id="@+id/userfruitNumText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="4"
                    android:text="fruit"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/setButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/option_icon" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="423dp"
        android:layout_weight="1.01"
        android:columnCount="3"
        android:paddingLeft="30dp"
        android:paddingTop="35dp"
        android:rowCount="3">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/plantflowerImage1"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/plantpotImage1"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/plantflowerImage2"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/plantpotImage2"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/plantflowerImage3"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/plantpotImage3"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_marginTop="20dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/plantflowerImage4"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/plantpotImage4"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_marginTop="20dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/plantflowerImage5"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/plantpotImage5"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_marginTop="20dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/plantflowerImage6"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/plantpotImage6"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_marginTop="25dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/plantflowerImage7"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/plantpotImage7"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_marginTop="25dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/plantflowerImage8"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/plantpotImage8"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_marginTop="25dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/plantflowerImage9"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/plantpotImage9"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1" />

        </LinearLayout>

    </GridLayout>

    <LinearLayout
        android:id="@+id/EXPGET11"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/change" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/bag2" />

        <Button
            android:id="@+id/storeButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/shop" />
    </LinearLayout>

</LinearLayout>