<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/this_month_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="3017 10"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="40sp" />

        <Button
            android:id="@+id/backbtn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/cal_lineframe"
            android:text="뒤로가기" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_above="@+id/main_bottom"
        android:layout_below="@+id/this_month_tv"
        android:layout_gravity="center">

        <fragment
            android:id="@+id/monthly"
            android:name="com.example.round.gaia_18.Callendar.MonthlyFragment"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            tools:layout="@layout/cal_fragment_monthly" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/main_add_bt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@null"
            android:drawableLeft="@android:drawable/ic_menu_add"
            android:text="@string/add_thing"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@null"
            android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
            android:text="일정삭제"
            android:textSize="14sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/scheduleList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cal_lineframe_direct" />

</LinearLayout>